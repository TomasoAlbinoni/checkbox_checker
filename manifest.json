{
  "manifest_version": 2,
  "name": "Checkbox Checker",
  "description": "Check or uncheck all checkboxes on a page",
  "version": "0.3",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "check.png"
  }
}